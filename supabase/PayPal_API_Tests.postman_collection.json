{
    "info": {
        "name": "Telugu Wala Links - PayPal Payment API",
        "description": "Collection for testing PayPal order creation and capture edge functions",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "supabase_url",
            "value": "https://YOUR_PROJECT_REF.supabase.co",
            "type": "string"
        },
        {
            "key": "anon_key",
            "value": "YOUR_SUPABASE_ANON_KEY",
            "type": "string"
        },
        {
            "key": "order_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Create PayPal Order",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "// Save order ID for next request",
                            "var jsonData = pm.response.json();",
                            "if (jsonData.id) {",
                            "    pm.collectionVariables.set('order_id', jsonData.id);",
                            "    console.log('Order ID saved: ' + jsonData.id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{anon_key}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"amount\": \"30.00\",\n  \"currency\": \"USD\"\n}"
                },
                "url": {
                    "raw": "{{supabase_url}}/functions/v1/create-paypal-order",
                    "host": [
                        "{{supabase_url}}"
                    ],
                    "path": [
                        "functions",
                        "v1",
                        "create-paypal-order"
                    ]
                },
                "description": "Creates a new PayPal order. Save the returned order ID for the next step."
            },
            "response": []
        },
        {
            "name": "2. Capture PayPal Order",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{anon_key}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"orderId\": \"{{order_id}}\",\n  \"email\": \"test@example.com\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"mobileNumber\": \"1234567890\",\n  \"countryCode\": \"+1\",\n  \"promoCode\": \"TEST123\"\n}"
                },
                "url": {
                    "raw": "{{supabase_url}}/functions/v1/capture-paypal-order",
                    "host": [
                        "{{supabase_url}}"
                    ],
                    "path": [
                        "functions",
                        "v1",
                        "capture-paypal-order"
                    ]
                },
                "description": "Captures a PayPal order after user approval. IMPORTANT: You must approve the payment in PayPal Sandbox before running this!"
            },
            "response": []
        },
        {
            "name": "3. Send Email (Optional)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{anon_key}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"to\": \"test@example.com\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"transactionId\": \"ABC123456\",\n  \"orderId\": \"{{order_id}}\",\n  \"timeOfPayment\": \"2024-12-04T06:52:00Z\",\n  \"amount\": \"30.00\",\n  \"currency\": \"USD\",\n  \"password\": \"John@123\"\n}"
                },
                "url": {
                    "raw": "{{supabase_url}}/functions/v1/send-email",
                    "host": [
                        "{{supabase_url}}"
                    ],
                    "path": [
                        "functions",
                        "v1",
                        "send-email"
                    ]
                },
                "description": "Sends welcome email with transaction details and login credentials. Requires Resend API key to be configured."
            },
            "response": []
        }
    ]
}